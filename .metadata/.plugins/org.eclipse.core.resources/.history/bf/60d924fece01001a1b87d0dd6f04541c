package com.class15;

public class IntQuestion1 {

	public static void main(String[] args) {

/*
 *  Write a program to swap 2num without a temp variable
 *  Swap 2 string without a temp variable
 */
		int a=10;
		int b=20;
		
		a=a+b; //30
		b=a-b; //30-20 = 10
		a=a-b; //30-10 = 20
		System.out.println("The value of a="+a);
		System.out.println("The value of b="+b);
		

		// String
		String str1="Hello";
		String str2="Bye";
		
		str1=str1+str2; //HelloBye
		str2=str1.substring(0, 5); //Hello - print str1 starting from index 0 ending index 5
		str1=str1.substring(5); //Bye -
		System.out.println("The value of str1="+str1);
		System.out.println("The value of str2="+str2);
		
	}

}
