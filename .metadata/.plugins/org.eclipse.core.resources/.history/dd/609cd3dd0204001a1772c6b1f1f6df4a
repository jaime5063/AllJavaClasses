package MyTestAndPlayPackage;

public class GuessingGame {
	
	String name, color, sport, team, carColor, movieCharacter, animal;
	int num;	
	void myName() {
		System.out.println("My name is "+name);
	}	
	void favColor() {
		System.out.println("My favorite color is "+color);
	}	
	void favMovieCharacter() {
		System.out.println("My favorite color is "+movieCharacter);
	}	
	void favAnimal() {
		System.out.println("My favorite color is "+animal);
	}	
	void favSport() {
		System.out.println("My favorite color is "+sport);
	}	
	void favNum() {
		System.out.println("my favorite number is "+num);
	}	
	public static void main(String[] args) {		
		GuessingGame game=new GuessingGame();
		game.color="blue";
		game.sport="Soccer";
		game.movieCharacter="";
		game.animal="";
		game.num=0;
	
		if (game.color.equalsIgnoreCase("blue")) {
			System.out.println("Yes! "+game.color+" is my favorite color!");
		}else {
			System.out.println("Not that color!");
		}
		if (game.sport.equalsIgnoreCase("soccer")) {
			System.out.println("Yes! "+game.sport+" is my favorite sport!");
		}else {
			System.out.println("Not that sport!");
		}
		if (game.movieCharacter.equalsIgnoreCase("")) {
			System.out.println("Great job!");
		}else {
			System.out.println("Not that character!");
		}
		if (game.animal.equalsIgnoreCase("")) {
			System.out.println("Great job!");
		}else {
			System.out.println("Not that animal!");
		}
		if (game.num == 0) {
			System.out.println("Great job!");
		}else {
			System.out.println("Try Again =( ");
		}
	}

}
